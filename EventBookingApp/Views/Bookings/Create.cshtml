@model EventBookingApp.Models.Booking

@if (ViewBag.Event != null)
{
    <h2>Book Event: @ViewBag.Event.Title</h2>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="EventId" value="@ViewBag.Event.Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SeatsBooked"></label>
            <input asp-for="SeatsBooked" type="number" min="1" max="@ViewBag.Event.AvailableSeats" class="form-control" />
            <span asp-validation-for="SeatsBooked" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Book Now</button>
    </form>
}
else
{
    <p class="text-danger">Event not found.</p>
}
